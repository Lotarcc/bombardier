{
    "agent": {
            "run_as_user": "root"
    },
    "logs": {
            "logs_collected": {
                    "files": {
                            "collect_list": [
                                    {
                                            "file_path": "/var/lib/docker/containers/*/*-json.log",
                                            "log_group_name": "bombardier",
                                            "log_stream_name": "{instance_id}",
                                            "retention_in_days": 1
                                    }
                            ]
                    }
            }
    }
}